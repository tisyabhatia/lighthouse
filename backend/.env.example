# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://lighthouse:lighthouse_dev_password@localhost:5432/lighthouse

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Queue Configuration
QUEUE_CONCURRENCY=5
JOB_TIMEOUT_MS=600000

# GitHub Configuration
GITHUB_TOKEN=
GITHUB_API_URL=https://api.github.com

# AI Service Configuration (Choose one)
AI_PROVIDER=openai
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# AI Settings
AI_MODEL=gpt-4
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.3
AI_BATCH_SIZE=10
AI_RATE_LIMIT_PER_MINUTE=50

# Storage Configuration
CLONE_BASE_PATH=/tmp/lighthouse-repos
MAX_REPO_SIZE_MB=500

# Analysis Configuration
MAX_FILE_SIZE_KB=1000
INCLUDE_TESTS=true
DEFAULT_LANGUAGES=typescript,javascript,python,java,go

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
JWT_SECRET=your-secret-key-change-in-production
API_KEY=
